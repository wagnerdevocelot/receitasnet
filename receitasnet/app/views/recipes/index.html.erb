<h1><%= pluralize(@recipes.size, "Receita", "Receitas") %></h1>

<% @recipes.each do |recipe| %>
    <article>
        <header>
            <h2><%= link_to recipe.name , recipe %></h2>
            <%= imagem(recipe) %>
        </header>
        <p>
            <%= truncate(recipe.stuff, length:15, separator: '') %>
        </p>
        <p>
            <%= formata_caloria(recipe) %>
        </p>
        <p>
            <%= recipe.duration.to_formatted_s(:time) %> min
        </p>


        <table>
            <tr>
                <th>Modo de Preparo:</th>
                <td><%= recipe.prepare_mode %></td>
            </tr>
            <th>Custo do Preparo:</th>
                <td><%= number_to_currency(recipe.cost) %></td>
            </tr>
        </table>
    </article>
<% end %>
</br>

<%= link_to 'Nova Receita', new_recipe_path %>


