<h1>Receitas</h1>

<% @recipes.each do |recipe| %>
    <article>
        <header>
            <h2><%= recipe.name %></h2>
        </header>
        <p>
            <%= recipe.stuff %>
        </p>
        <p>
            <%= recipe.calories %>
        </p>
        <table>
            <tr>
                <th>Modo de Preparo:</th>
                <td><%= recipe.prepare_mode %></td>
            </tr>
            <th>Custo do Preparo:</th>
                <td><%= number_to_currency(recipe.cost) %></td>
            </tr>
        </table>
    </article>
<% end %>


